<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GuideActivtiy">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <Button
        android:id="@+id/btn_start_main"
        android:background="@drawable/btn_start_main_selector"
        android:text="开始体验"
        android:textSize="20sp"
        android:textColor="@drawable/btn_start_main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:visibility="gone"/>

    <!--***小灰点的布局***-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp">
        <!--三个灰色点-->
        <LinearLayout
            android:id="@+id/ll_point_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--红点-->
        <ImageView
            android:id="@+id/iv_point_red"
            android:background="@drawable/point_color_red"
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </RelativeLayout>

</RelativeLayout>